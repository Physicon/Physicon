.layout {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.layout__inner {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.layout__header {
    box-shadow: 0 2px rgba(0, 0, 0, 0.2);
}

.layout__footer {
    margin-top: auto;
    width: 100%;
    overflow: hidden;
    background: #3c3c3c;
}

.layout__main {
    overflow: hidden;
    margin: 0 auto;
    padding: 0;
    width: 1000px;
}