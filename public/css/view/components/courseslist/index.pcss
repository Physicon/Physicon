.courseslist {
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    margin: 60px 0 20px;
    padding: 0;
}

.courseslist__desc {
    position: absolute;
    top: -50px;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    font-size: 24px;
    font-weight: 300;
    color: #3c3c3b;
}

.courseslist__wrapper {
    position: relative;
}